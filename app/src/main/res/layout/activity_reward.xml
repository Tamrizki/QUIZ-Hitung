<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.reward.RewardActivity">
    <ImageView
        android:id="@+id/trophy"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_trophy"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_below="@+id/trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/typoBig"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="#FFC107"
        android:text="Selamat! Anda telah menyelesaikan game ini."/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kembali"
            style="@style/typoSmallBold"
            android:background="#AAAAAA"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/bntMainLagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Lagi"
            style="@style/typoSmallBold"
            android:layout_alignParentRight="true"
            android:background="@color/teal_200"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</RelativeLayout>